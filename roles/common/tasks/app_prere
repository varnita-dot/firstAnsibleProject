- name: clean a directory
  ansible.builtin.file:
    file: "{{ loc_app }}"
    state: absent

- name: Create a directory
  ansible.builtin.file:
    path: "{{ loc_app }}"
    state: directory

- name: download and extract file
  ansible.builtin.unarchive:
    src: https://expense-artifacts.s3.amazonaws.com/{{component}}.zip
    dest: "{{ loc_app }}"
    remote_src: yes
